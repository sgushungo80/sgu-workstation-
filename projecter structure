# 1. Create project structure
mkdir -p .vscode server docs

# 2. Create VS Code settings file
cat > .vscode/settings.json << 'EOF'
{
  "python.analysis.extraPaths": [
    "server"
  ],
  "restructuredtext.confPath": "${workspaceFolder}/docs",
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  }
}
EOF

# 3. Create Python virtual environment
python -m venv venv
source venv/bin/activate

# 4. Create test Python module
cat > server/test_module.py << 'EOF'
def hello_sgu():
    return "ðŸŽ‰ SGU Workstation on GitHub Codespaces is WORKING!"

def calculate_sum(a, b):
    return a + b

def multiply_numbers(x, y):
    return x * y

if __name__ == "__main__":
    print(hello_sgu())
EOF

# 5. Create main test file
cat > test_import.py << 'EOF'
from server.test_module import hello_sgu, calculate_sum, multiply_numbers

print("ðŸš€ Testing SGU Workstation Setup...")
print(hello_sgu())

result1 = calculate_sum(15, 25)
print(f"ðŸ“Š Sum Calculation: 15 + 25 = {result1}")

result2 = multiply_numbers(6, 7)
print(f"ðŸ“Š Multiplication: 6 Ã— 7 = {result2}")

print("âœ… SUCCESS: SGU Workstation is fully operational!")
print("ðŸŽ¯ You can now start developing!")
EOF

# 6. Create documentation structure
cat > docs/conf.py << 'EOF'
project = 'SGU GitHub Workstation'
copyright = '2024, SGU Team'
author = 'SGU Developer'

extensions = []
html_theme = 'alabaster'
master_doc = 'index'
EOF

cat > docs/index.rst << 'EOF'
